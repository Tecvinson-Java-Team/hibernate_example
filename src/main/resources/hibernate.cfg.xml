<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-5.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- JDBC URL for the database -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_example</property>
        <!-- Username for the database connection -->
        <property name="hibernate.connection.username">root</property>
        <!-- Password for the database connection (leave empty if none) -->
        <property name="hibernate.connection.password"></property>

        <!-- JDBC connection pool settings (optional; can remove if not needed) -->
        <property name="hibernate.c3p0.min_size">5</property>
        <!-- Minimum number of connections in the pool -->
        <property name="hibernate.c3p0.max_size">20</property>
        <!-- Maximum number of connections in the pool -->
        <property name="hibernate.c3p0.timeout">300</property>
        <!-- Timeout for a connection to be removed from the pool -->
        <property name="hibernate.c3p0.max_statements">50</property>
        <!-- Maximum number of prepared statements to cache -->
        <property name="hibernate.c3p0.idle_test_period">3000</property>
        <!-- Interval (in seconds) for testing idle connections -->

        <!-- Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <!-- Dialect used for generating SQL for the specified database -->

        <!-- Enable Hibernate's automatic session context management -->
        <property name="hibernate.current_session_context_class">thread</property>
        <!-- Defines how the session context is managed; 'thread' indicates that sessions are tied to the current thread -->

        <!-- Disable second-level cache -->
        <property name="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <!-- Specifies no caching provider; can be changed for caching purposes -->

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>
        <!-- Useful for debugging; shows SQL statements generated by Hibernate -->

        <!-- Update the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- Automatically updates the database schema to match the entity classes -->

        <!-- Names of annotated entity classes -->
        <mapping class="com.tecvisonacademy.entities.Customer"/>
        <mapping class="com.tecvisonacademy.entities.Inventory"/>
        <mapping class="com.tecvisonacademy.entities.OrderHistory"/>
        <!-- Mapping of the entity classes that Hibernate should manage -->
    </session-factory>
</hibernate-configuration>
